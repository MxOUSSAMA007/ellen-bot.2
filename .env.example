# Ellen Trading Bot - Environment Configuration Example
# انسخ هذا الملف إلى .env وقم بتعديل القيم حسب احتياجاتك

# ===========================================
# وضع التشغيل والبيئة
# ===========================================
NODE_ENV=development

# وضع المحاكاة - true للاختبار الآمن، false للتداول الحقيقي
# تحذير: false يعني استخدام أموال حقيقية!
VITE_DRY_RUN=true

# ===========================================
# إعدادات الواجهة الأمامية
# ===========================================
# رابط الخادم الخلفي
VITE_BACKEND_URL=http://localhost:3001/api

# رمز الأمان للواجهة (غيّر هذا في الإنتاج!)
VITE_FRONTEND_TOKEN=ellen-bot-secure-token-change-in-production

# وضع التطوير - إظهار معلومات إضافية
VITE_DEV_MODE=true

# إظهار معلومات التصحيح
VITE_SHOW_DEBUG_INFO=true

# محاكاة استدعاءات API (للتطوير)
VITE_MOCK_API_CALLS=false

# ===========================================
# إعدادات Paper Trading
# ===========================================
# الرصيد الابتدائي للمحاكاة ($)
VITE_PAPER_TRADING_BALANCE=10000

# رسوم المحاكاة (%)
VITE_PAPER_TRADING_FEE_RATE=0.001

# انزلاق السعر في المحاكاة (%)
VITE_PAPER_TRADING_SLIPPAGE=0.0005

# ===========================================
# إعدادات Binance API (للخادم الخلفي فقط)
# ===========================================

# للتطوير والاختبار - استخدم Binance Testnet
BINANCE_BASE_URL=https://testnet.binance.vision/api
BINANCE_API_KEY=your_testnet_api_key_here
BINANCE_SECRET_KEY=your_testnet_secret_key_here

# للإنتاج - استخدم Binance Live API (احذر جداً!)
# BINANCE_BASE_URL=https://api.binance.com/api
# BINANCE_API_KEY=your_live_api_key_here
# BINANCE_SECRET_KEY=your_live_secret_key_here

# ===========================================
# إعدادات الأمان
# ===========================================
# رمز الأمان للواجهة (يجب تغييره في الإنتاج)
FRONTEND_TOKEN=ellen-bot-secure-token-change-in-production

# مفتاح JWT للمصادقة (32 حرف على الأقل)
JWT_SECRET=your_super_secure_jwt_secret_minimum_32_characters_long_for_production

# مفتاح التشفير (32 بايت مُرمز بـ base64)
ENCRYPTION_KEY=your_fernet_encryption_key_32_bytes_base64_encoded_here

# ===========================================
# إعدادات قاعدة البيانات (اختيارية)
# ===========================================
# مسار قاعدة بيانات SQLite
DATABASE_PATH=./logs/ellen-bot.db

# PostgreSQL للإنتاج (اختياري)
# DATABASE_URL=postgresql://username:password@localhost:5432/ellen_bot

# ===========================================
# إعدادات Redis (اختيارية للتخزين المؤقت)
# ===========================================
REDIS_URL=redis://localhost:6379/0

# ===========================================
# إعدادات الخادم الخلفي
# ===========================================
BACKEND_PORT=3001

# ===========================================
# إعدادات Rate Limiting
# ===========================================
# عدد الطلبات المسموحة في النافزة الزمنية
RATE_LIMIT_REQUESTS=100

# النافزة الزمنية بالمللي ثانية (60000 = دقيقة واحدة)
RATE_LIMIT_WINDOW=60000

# ===========================================
# إعدادات إعادة المحاولة
# ===========================================
# عدد المحاولات الأقصى
RETRY_ATTEMPTS=3

# التأخير الأساسي (مللي ثانية)
RETRY_DELAY=1000

# مهلة الاتصال (مللي ثانية)
CONNECTION_TIMEOUT=10000

# ===========================================
# إعدادات التداول الافتراضية
# ===========================================
# هدف الربح الافتراضي (%)
DEFAULT_PROFIT_TARGET=2.0

# وقف الخسارة الافتراضي (%)
DEFAULT_STOP_LOSS=1.0

# الحد الأقصى للخسارة اليومية ($)
MAX_DAILY_LOSS=100

# الحد الأقصى لحجم المركز (% من الرصيد)
MAX_POSITION_SIZE=10

# سرعة التحليل (مللي ثانية)
ANALYSIS_SPEED=1000

# ===========================================
# إعدادات المراقبة والسجلات
# ===========================================
# مستوى السجلات (error, warn, info, debug)
LOG_LEVEL=info

# مسار ملف السجلات
LOG_FILE_PATH=./logs/ellen-bot.log

# تفعيل سجلات المراجعة
ENABLE_AUDIT_LOGS=true

# الاحتفاظ بالسجلات (أيام)
LOG_RETENTION_DAYS=30

# ===========================================
# إعدادات التنبيهات (اختيارية)
# ===========================================
# Telegram Bot للتنبيهات
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_telegram_chat_id_here

# إعدادات البريد الإلكتروني
EMAIL_SMTP_HOST=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_password_here

# ===========================================
# إعدادات التطوير والاختبار
# ===========================================
# تشغيل الاختبارات التلقائية
RUN_TESTS_ON_START=false

# إظهار معلومات الأداء
SHOW_PERFORMANCE_METRICS=true

# حفظ بيانات الاختبار
SAVE_TEST_DATA=false

# ===========================================
# ملاحظات مهمة للأمان
# ===========================================
# 1. لا ترفع ملف .env إلى Git أبداً
# 2. استخدم VITE_DRY_RUN=true دائماً أثناء التطوير
# 3. غيّر FRONTEND_TOKEN في الإنتاج
# 4. استخدم Testnet قبل Live API
# 5. فعّل المصادقة الثنائية على حساب Binance
# 6. احتفظ بنسخة احتياطية من مفاتيح API
# 7. راقب السجلات بانتظام
# 8. ضع حدود يومية للخسائر
# 9. ابدأ بمبالغ صغيرة في التداول الحقيقي
# 10. اختبر جميع الاستراتيجيات في وضع DRY_RUN أولاً

# ===========================================
# أمثلة على التكوين لبيئات مختلفة
# ===========================================

# للتطوير المحلي:
# VITE_DRY_RUN=true
# BINANCE_BASE_URL=https://testnet.binance.vision/api
# LOG_LEVEL=debug

# للاختبار على Testnet:
# VITE_DRY_RUN=false
# BINANCE_BASE_URL=https://testnet.binance.vision/api
# BINANCE_API_KEY=your_testnet_key
# BINANCE_SECRET_KEY=your_testnet_secret

# للإنتاج (احذر!):
# VITE_DRY_RUN=false
# BINANCE_BASE_URL=https://api.binance.com/api
# BINANCE_API_KEY=your_live_key
# BINANCE_SECRET_KEY=your_live_secret
# LOG_LEVEL=warn