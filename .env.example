# Ellen Trading Bot - Environment Configuration

# ===========================================
# وضع التشغيل والبيئة
# ===========================================
NODE_ENV=development
DRY_RUN=true

# ===========================================
# إعدادات Binance API
# ===========================================
# للتطوير - استخدم Testnet
BINANCE_BASE_URL=https://testnet.binance.vision/api
BINANCE_API_KEY=your_testnet_api_key_here
BINANCE_SECRET_KEY=your_testnet_secret_key_here

# للإنتاج - استخدم Live API (احذر!)
# BINANCE_BASE_URL=https://api.binance.com/api
# BINANCE_API_KEY=your_live_api_key_here
# BINANCE_SECRET_KEY=your_live_secret_key_here

# ===========================================
# إعدادات الأمان
# ===========================================
JWT_SECRET=your_super_secure_jwt_secret_minimum_32_characters_long
ENCRYPTION_KEY=your_fernet_encryption_key_32_bytes_base64_encoded

# ===========================================
# إعدادات قاعدة البيانات (اختيارية)
# ===========================================
DATABASE_URL=postgresql://username:password@localhost:5432/ellen_bot
# أو استخدم SQLite للتطوير
# DATABASE_URL=sqlite:///./ellen_bot.db

# ===========================================
# إعدادات Redis (اختيارية)
# ===========================================
REDIS_URL=redis://localhost:6379/0

# ===========================================
# إعدادات الخادم الخلفي
# ===========================================
VITE_BACKEND_URL=http://localhost:3001/api
BACKEND_PORT=3001

# ===========================================
# إعدادات التداول الافتراضية
# ===========================================
DEFAULT_PROFIT_TARGET=2.0
DEFAULT_STOP_LOSS=1.0
MAX_DAILY_LOSS=100
MAX_POSITION_SIZE=10
ANALYSIS_SPEED=1000

# ===========================================
# إعدادات المراقبة والسجلات
# ===========================================
LOG_LEVEL=info
LOG_FILE_PATH=./logs/ellen-bot.log
ENABLE_AUDIT_LOGS=true

# ===========================================
# إعدادات التنبيهات (اختيارية)
# ===========================================
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_telegram_chat_id
EMAIL_SMTP_HOST=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_password

# ===========================================
# إعدادات متقدمة
# ===========================================
RATE_LIMIT_REQUESTS=1200
RATE_LIMIT_WINDOW=60000
RETRY_ATTEMPTS=3
RETRY_DELAY=1000
CONNECTION_TIMEOUT=10000

# ===========================================
# إعدادات التطوير
# ===========================================
VITE_DEV_MODE=true
VITE_SHOW_DEBUG_INFO=true
VITE_MOCK_API_CALLS=false