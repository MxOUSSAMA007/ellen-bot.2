# Ellen Trading Bot - Environment Configuration

# ===========================================
# وضع التشغيل والبيئة
# ===========================================
NODE_ENV=development
DRY_RUN=true

# ===========================================
# إعدادات الواجهة الأمامية
# ===========================================
VITE_BACKEND_URL=http://localhost:3001/api
VITE_FRONTEND_TOKEN=ellen-bot-secure-token
VITE_DEV_MODE=true
VITE_SHOW_DEBUG_INFO=true

# ===========================================
# إعدادات التداول الافتراضية
# ===========================================
DEFAULT_PROFIT_TARGET=2.0
DEFAULT_STOP_LOSS=1.0
MAX_DAILY_LOSS=100
MAX_POSITION_SIZE=10
ANALYSIS_SPEED=1000

# ===========================================
# إعدادات المراقبة والسجلات
# ===========================================
LOG_LEVEL=info
ENABLE_AUDIT_LOGS=true

# ===========================================
# إعدادات متقدمة
# ===========================================
RATE_LIMIT_REQUESTS=1200
RATE_LIMIT_WINDOW=60000
RETRY_ATTEMPTS=3
RETRY_DELAY=1000
CONNECTION_TIMEOUT=100
